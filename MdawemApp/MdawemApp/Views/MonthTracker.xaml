<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MdawemApp.Views.MonthTracker"
             Title="Month Tracker">
    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Primary" IconImageSource="calendar.png" Priority="0" Clicked="Filter_Clicked" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout Margin="20">

            <Label               x:Name="SelectedMonthYearLabel"
                                 FontSize="24" 
                                 FontAttributes="Bold" 
                                 TextColor="Black" 
                                 Margin="10"
                                 VerticalOptions="Start" 
                                 HorizontalOptions="Start"/>


            <ScrollView>
                <StackLayout x:Name="AttendanceStackLayout" Margin="0"/>
            </ScrollView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>