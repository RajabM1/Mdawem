<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MdawemApp.Views.ForgotPassword"
            >
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Image Source="logo.png" WidthRequest="200" HeightRequest="180"></Image>
            <Label FontSize="21" Text="Forgot Password"></Label>
            <Label FontSize="14" TextColor="Gray" Text="Enter the email to recover the password"></Label>
            <StackLayout >
                <Label Margin="0" TextColor="#FF5733" FontSize="15" FontAttributes="Bold" Text="Email"></Label>
                <Frame Padding="7, 0, 7, 0" HasShadow="True" BorderColor="#e8e8e8">
                    <Entry Keyboard="Email" x:Name="emailEntry"  Margin="0" Placeholder="Enter your email" TextChanged="Entry_TextChanged"></Entry>
                </Frame>
                <Label x:Name="emailErrorMessage" Margin="0, 5, 0, 0" Text="Invalid Email" TextColor="Red" IsVisible="False"></Label>
                <Button Margin="0, 15, 0, 0" TextTransform="None" Text="Send" Clicked="Button_Clicked"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>